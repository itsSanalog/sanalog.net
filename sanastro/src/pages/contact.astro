  <style>
    .contacts_grid {
      margin-bottom: 150px;
      display: grid;
      column-gap: 20px;
      row-gap: 20px;
      grid-template-columns: 250px 250px 250px;
      grid-template-rows: auto;
    }

    /* also check ContactGrid component for more CSS */
  </style>

  <!-- SMOOTH SCROLLING -->
  <script slot="js" src="https://min30327.github.io/luxy.js/dist/js/luxy.js"></script>
  <script slot="js">
  var isMobile = /iPhone|iPad|Android/i.test(navigator.userAgent);
  if (!isMobile) {
      luxy.init({
          wrapper: '#luxy',
          wrapperSpeed: 0.069, //haha 69
