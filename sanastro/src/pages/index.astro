---
import "../styles/normalize.css";
import "../styles/bauhaus.css";

import Head from "../components/Head.astro";
---

<html lang="en">
  <Head title="sanalog.net" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+KR:wght@300&family=Noto+Serif+SC:wght@300&display=swap" rel="stylesheet">
  <body>
    <main class="landing">
      <svg id="bauhaus" viewBox="0 0 1600 350" width="100%" preserveAspectRatio="xMidYMid meet">
        <g id="bigthing" transform="translate(0, 137)">

          <!-- this didn't take terribly long but it was still a pain in the arse to write by hand -->
          
          <rect x="0" y="0" width="50" height="50" fill="#ffffff" class="shape" />
          <rect x="50" y="0" width="50" height="50" fill="#000000" class="shape" />
          
          <g class="raider">
            <circle cx="calc(100 + 25/2)" cy="37.5" r="12.5" class="shape color-laserred" />
            <circle cx="calc(125 + 25/2)" cy="37.5" r="12.5" class="shape color-acidyellow" />
            <circle cx="calc(150 + 25/2)" cy="37.5" r="12.5" class="shape color-neonmint" />
            <circle cx="calc(175 + 25/2)" cy="37.5" r="12.5" class="shape color-arcblue" />
          </g>

          <rect x="100" y="50" width="50" height="25" class="shape color-coldwhite" />
          <rect x="150" y="50" width="50" height="25" class="shape color-charcoal" />

          <rect x="200" y="0" width="25" height="25" class="shape color-grey3" />
          <rect x="200" y="25" width="25" height="25" class="shape color-grey2" />
          
          <path id="sanalogS" d="m 225 25 v 25 h 25 c 25 0 25 -25 25 -25 v -25 h -25 c -25 0 -25 25 -25 25 z" class="shape color-grey1" />
          
          <rect x="275" y="0" width="50" height="25" class="shape color-coldwhite" />
          <rect x="275" y="25" width="25" height="25" class="shape color-grey2" />
          <rect x="325" y="0" width="25" height="25" class="shape color-grey2" />
          <rect x="300" y="25" width="50" height="25" class="shape color-ionblue" />
          <rect x="250" y="75" width="125" height="25" class="shape color-staticwhite drift-x" />
          
          <path d="m 350 0 v 25 a 1 1 0 0 0 50 0 c 0 -25 -25 -25 -25 -25 h -25 z" class="shape color-grey3" />
          <path id="sanalogA0" d="m 450 50 v -25 a 1 1 180 0 0 -50 0 c 0 25 25 25 25 25 h 25 z" class="shape color-terminalamber" />

          <rect x="450" y="0" width="25" height="25" class="shape color-ionblue" />
          <circle cx="calc(450 + 25/2)" cy="37.5" r="12.5" class="shape color-staticwhite" />
          <rect x="475" y="0" width="25" height="25" class="shape color-charcoal" />
          <rect x="500" y="0" width="75" height="25" class="shape color-grey2" />
          <rect x="500" y="25" width="50" height="25" class="shape color-coldwhite" />
          <rect x="550" y="25" width="25" height="25" class="shape color-grey1" />
          <rect x="575" y="25" width="25" height="25" class="shape color-grey2" />

          <path id="sanalogN" d="m 600 50 v -25 a 1 1 1 0 1 50 0 v 25 z" class="shape color-staticwhite" />
          <rect x="600" y="-100" width="25" height="25" class="rotate-90 shape color-grey2" />
          <rect x="625" y="-75" width="25" height="25" class="shape color-staticwhite" />

          <path d="m 675 0 v 50 a 1 1 0 0 0 0 -50" class="rotate-360 shape color-terminalamber" />
          <path d="m 700 0 v 50 a 1 1 0 0 0 0 -50" class="shape color-ionblue" />
          <rect x="725" y="0" width="25" height="25" class="shape color-grey1" />
          <rect x="725" y="25" width="25" height="25" class="shape color-staticwhite" />
          <rect x="750" y="0" width="25" height="25" class="shape color-grey2" />
          <rect x="750" y="25" width="25" height="25" class="shape color-grey3" />
          
          <path d="m 725 125 v -25 a 1 1 180 0 0 -50 0 c 0 25 25 25 25 25 h 25 z" class="shape color-staticwhite" />
          <rect x="725" y="100" width="25" height="25" class="shape color-terminalamber" />
          <g class="orbit">
            <circle cx="690" cy="110" r="10" opacity="0"/>
            <circle cx="calc(650 + 25/2)" cy="112.5" r="12.5" class="shape color-charcoal" />
          </g>

          <rect x="800" y="0" width="25" height="50" class="shape color-staticwhite" />
          <path id="sanalogA1" d="m 875 50 v -25 a 1 1 180 0 0 -50 0 c 0 25 25 25 25 25 h 25 z" class="shape color-grey3" />
          <rect x="875" y="0" width="25" height="25" class="shape color-charcoal" />
          <rect x="875" y="25" width="25" height="25" class="shape color-grey2" />
          
          <rect x="900" y="25" width="25" height="25" class="shape color-terminalamber" />
          <rect x="925" y="50" width="25" height="25" class="shape color-terminalamber" />
          <rect x="900" y="0" width="50" height="25" class="shape color-staticwhite" />
          <circle cx="calc(950 + 25/2)" cy="12.5" r="12.5" class="shape color-grey2" />
          <rect x="900" y="-100" width="50" height="25" class="shape color-grey3" />
          
          <path id="sanalogL" d="m 1000 0 v 50 h 50 v -25 h -25 v -25 z" class="shape color-coldwhite" />
          <rect x="1025" y="0" width="25" height="25" class="shape color-grey3" />
          <rect x="1050" y="25" width="25" height="25" class="shape color-ionblue" />
          <rect x="1075" y="0" width="25" height="50" class="shape color-coldwhite" />
          
          <circle cx="calc(1100 + 25/2)" cy="12.5" r="12.5" class="shape color-charcoal" />
          <rect x="1125" y="0" width="75" height="25" class="shape color-grey2" />
          <circle cx="calc(1150 + 25/2)" cy="37.5" r="12.5" class="bounce-x shape color-charcoal" />
          <circle cx="calc(1175 + 25/2)" cy="37.5" r="12.5" class="shape color-charcoal" />

          <rect x="1200" y="0" width="50" height="50" class="shape color-staticwhite" />
          <rect x="1250" y="0" width="25" height="25" class="shape color-terminalamber" />
          <rect x="1250" y="25" width="25" height="25" class="shape color-ionblue" />

          <path d="m 1300 0 v 50 a 1 1 0 0 1 0 -50" class="rotate-360 shape color-staticwhite" />
          <circle id="sanalogO" cx="calc(1300 + 25)" cy="25" r="25" class="shape color-coldwhite" />
          <rect x="1350" y="25" width="25" height="25" class="shape color-ionblue" />
          <rect x="1375" y="0" width="25" height="25" class="shape color-charcoal" />
          
          <rect x="1400" y="0" width="50" height="50" class="shape color-grey3" />
          <circle cx="calc(1450 + 25/2)" cy="12.5" r="12.5" class="shape color-grey3" />
          <circle cx="calc(1450 + 25/2)" cy="37.5" r="12.5" class="shape color-staticwhite" />
          <circle cx="calc(1475 + 25/2)" cy="12.5" r="12.5" class="shape color-grey2" />
          <rect x="1475" y="25" width="25" height="25" class="shape color-grey1" />
          
          <path id="sanalogG" d="m 1525 0 a 1 1 0 0 0 0 50 c 0 0 25 0 25 -25 h -25 v -25 z" class="shape color-coldwhite" />
          <rect x="1550" y="0" width="25" height="25" class="rotate-90 shape color-terminalamber" />
          <rect x="1575" y="25" width="25" height="25" class="shape color-charcoal" />

        </g>

        <g id="text">
          <a href="about">
            <text x="220" y="75" class="type kaiti color-coldwhite" font-size="60px">潜</text>
          </a>
          <a href="contact">
            <text x="720" y="345" class="type kaiti color-coldwhite" font-size="50px">我</text>
          </a>
          <a href="blog">
            <text x="1400" y="294" class="type kaiti color-coldwhite" font-size="50px">录</text>
          </a>
          
          <a href="https://www.youtube.com/watch?v=12mwzwUL7Vk&list=OLAK5uy_nrxtDaW31fja4eh5HZQaaxeTe5e9EK1o0" target="_blank">
            <text x="447" y="235" class="type simsun color-staticwhite" font-size="30px">呼</text>
            <text x="447" y="273" class="type simsun color-staticwhite" font-size="30px">吸</text>
          </a>
          
          <text x="925" y="295" class="type alphabet color-grey3" font-size="28px" letter-spacing="2">record.</text>
          <text x="1156" y="295" class="type alphabet color-grey3" font-size="28px" letter-spacing="2">reason.</text>

          <text x="1153" y="80" class="type hangeul" font-size="40px" letter-spacing="114" fill="#ffffff">산아록</text>

          <text x="1150" y="262" class="type" font-size="80px" font-weight="bold" fill="#ffffff" opacity="0.5">02.</text>

          <text x="930" y="65" class="type alphabet color-staticwhite" font-size="20px" transform="rotate(90 932 70)">tear.</text>
        </g>
                
      </svg>
    </main>
  </body>
</html>

<script>
  import { 
    initPassiveRotation1,
    initPassiveRotation2,
    initPassiveDrift,
    initPassiveBounce,
    initPassiveOrbit,
    initHoverMorph,
    initScrollAnimation
  } from '../scripts/animation.js';

  document.addEventListener('DOMContentLoaded', () => {
    const root = document.getElementById('bauhaus');
    
    if (root) {
      initPassiveRotation1(root);
      initPassiveRotation2(root);
      initPassiveDrift(root);
      initPassiveBounce(root);
      initPassiveOrbit(root);
      initHoverMorph(root);
      initScrollAnimation(root);
    } else {
      console.error('um this shouldnt happen');
    }
  });
</script>